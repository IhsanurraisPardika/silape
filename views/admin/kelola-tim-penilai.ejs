<!doctype html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Kelola Tim Penilai</title>
  <link rel="icon" href="/images/sp.png" type="image/sp.png">
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100 antialiased">
  <!-- Wrapper UTAMA: sama pola adminDashboard -->
  <div class="flex h-screen overflow-hidden">

    <!-- OVERLAY (mobile) -->
    <div id="sidebarOverlay" class="fixed inset-0 z-30 bg-black/40 hidden md:hidden"></div>

    <!-- SIDEBAR WRAPPER (mobile drawer, desktop static) -->
    <div id="sidebarWrapper" class="
        fixed inset-y-0 left-0 z-40
        -translate-x-full
        transition-transform duration-300 ease-in-out
        md:static md:translate-x-0
        h-screen md:h-full
        overflow-y-auto md:overflow-visible
      ">
      <div class="relative h-full">
        <!-- Close button (mobile) -->
        <button id="btnSidebarClose" type="button"
          class="md:hidden absolute top-3 right-3 z-50 inline-flex items-center justify-center w-10 h-10 rounded-xl bg-white/15 hover:bg-white/25 text-white"
          aria-label="Tutup sidebar">
          ✕
        </button>

        <!-- Sidebar partial -->
        <%- include('../partials/sidebarAdmin') %>
      </div>
    </div>

    <!-- MAIN CONTENT AREA -->
    <div class="flex-1 flex flex-col overflow-hidden">

      <!-- MOBILE TOPBAR (md- only) -->
      <div class="md:hidden sticky top-0 z-20 bg-white border-b border-gray-200">
        <div class="h-14 px-4 flex items-center justify-between gap-3">
          <button id="btnSidebarOpen" type="button"
            class="inline-flex items-center justify-center w-10 h-10 rounded-xl border border-gray-200 bg-white hover:bg-gray-50"
            aria-label="Buka sidebar">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none">
              <path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
          </button>

          <div class="font-semibold text-gray-900 truncate">Kelola Tim</div>
          <div class="w-10 h-10"></div>
        </div>
      </div>

      <!-- Header (desktop only) -->
      <div class="hidden md:block">
        <%- include('../partials/header') %>
      </div>

      <!-- MAIN: yang scroll hanya area ini -->
      <main class="flex-1 overflow-auto bg-gray-50 flex flex-col">

        <!-- PAGE CONTENT -->
        <div class="p-4 sm:p-6 lg:p-8 pb-24">
          <div class="max-w-6xl mx-auto space-y-6">

            <!-- Title + Button -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <h1 class="text-2xl font-bold text-gray-900">Kelola Tim</h1>

              <button type="button" id="btnOpenTambah"
                class="inline-flex items-center justify-center gap-2 px-5 py-3 rounded-xl bg-red-600 text-white shadow hover:bg-red-700 active:scale-[0.99] whitespace-nowrap">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none">
                  <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                </svg>
                Tambah Pengguna
              </button>
            </div>

            <!-- Tabs -->
            <div class="flex flex-wrap gap-3 items-center pb-1">
              <span class="px-4 py-2 bg-red-600 text-white rounded shadow font-medium">
                Kelola Tim Penilai
              </span>
              <a href="/kelolaKantor"
                class="px-4 py-2 bg-white border rounded shadow-sm text-gray-700 hover:bg-gray-50">
                Kelola Kantor Tim
              </a>
            </div>

            <!-- Table Card -->
            <div class="bg-gray-100/50">
              <!-- Header Table Custom -->
              <div class="grid grid-cols-12 gap-4 bg-red-600 text-white font-semibold py-3 px-4 rounded-t-lg text-left">
                <div class="col-span-2 text-white">Tim</div>
                <div class="col-span-4 text-white">Email</div>
                <div class="col-span-4 text-white">Daftar Anggota</div>
                <div class="col-span-2 text-white text-right">Aksi</div>
              </div>

              <div class="bg-gray-100/50 space-y-2 mt-2">
                <% if (!users || users.length===0) { %>
                  <div class="bg-white p-6 text-center text-gray-500 rounded-lg">Belum ada data pengguna.</div>
                  <% } else { %>
                    <% users.forEach((u)=> { %>
                      <div
                        class="grid grid-cols-12 gap-4 bg-gray-100/50 py-4 px-4 items-start border-b border-gray-200/50">
                        <!-- Tim -->
                        <div class="col-span-2 font-bold text-gray-700 mt-1">
                          <%= u.timNama || "-" %>
                        </div>

                        <!-- Email -->
                        <div class="col-span-4 text-gray-600 text-sm mt-1 truncate" title="<%= u.email %>">
                          <%= u.email %>
                        </div>

                        <!-- Anggota (List Ordered) -->
                        <div class="col-span-4">
                          <% if (u.anggota && u.anggota.length> 0) { %>
                            <ol class="list-decimal list-inside text-sm text-gray-600 space-y-1">
                              <% u.anggota.forEach((m)=> { %>
                                <li>
                                  <%= m.nama %>
                                </li>
                                <% }) %>
                            </ol>
                            <% } else { %>
                              <span class="text-gray-400 text-sm">-</span>
                              <% } %>
                        </div>

                        <!-- Aksi -->
                        <div class="col-span-2 flex justify-end gap-2">
                          <!-- Edit Button -->
                          <button type="button" class="text-blue-600 hover:text-blue-800 transition-colors btnOpenEdit"
                            title="Edit Pengguna" data-email="<%= u.email %>" data-nama="<%= u.nama %>"
                            data-timid="<%= u.timKode || '' %>" data-anggota='<%- JSON.stringify(u.anggota || []) %>'>
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                          </button>

                          <!-- Delete Button (Form) -->
                          <form action="/pengguna/hapus" method="POST"
                            onsubmit="return confirm('Apakah Anda yakin ingin menghapus pengguna ini?');">
                            <input type="hidden" name="email" value="<%= u.email %>">
                            <button type="submit" class="text-red-600 hover:text-red-800 transition-colors"
                              title="Hapus Pengguna">
                              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                              </svg>
                            </button>
                          </form>
                        </div>
                      </div>
                      <% }) %>
                        <% } %>
              </div>
            </div>

          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- ================= MODAL: TAMBAH ================= -->
  <div id="modalTambah" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/40" data-close="modalTambah"></div>

    <!-- Modal Content: Right aligned like design -->
    <div class="absolute right-0 top-0 h-full w-full max-w-md bg-white shadow-2xl flex flex-col animate-slide-in-right">
      <div class="bg-white px-6 py-5 flex items-center justify-between border-b border-gray-100 relative">
        <div>
          <div class="text-xl font-bold text-black">Tambah Tim Penilai</div>
          <div class="text-sm text-gray-500">Buat Akun Untuk Tim Penilai</div>
        </div>
        <button type="button" class="text-gray-400 hover:text-gray-600 text-2xl font-bold absolute top-4 right-6"
          data-close="modalTambah">✕</button>
      </div>

      <form action="/pengguna/tambah" method="POST" class="p-6 space-y-4 overflow-y-auto flex-1" autocomplete="off">

        <!-- Role -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Pilih Role</label>
          <div class="relative">
            <select name="peran" id="selectRoleTambah" required
              class="w-full rounded-xl border-2 border-red-600 bg-white px-4 py-2.5 outline-none appearance-none text-gray-700">
              <option value="" selected disabled>Pilih Role...</option>
              <option value="ADMIN">Admin</option>
              <option value="TIM_PENILAI">Tim Penilai</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-700">
              <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                <path
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Tim (Hidden unless TIM_PENILAI) -->
        <div id="wrapTimTambah" class="hidden">
          <label class="block text-sm font-bold text-black mb-1">Pilih Tim</label>
          <div class="relative">
            <select name="timId"
              class="w-full rounded-xl border-2 border-red-600 bg-white px-4 py-2.5 outline-none appearance-none text-gray-700">
              <option value="" selected disabled>Pilih Tim...</option>
              <% if (timList && timList.length) { %>
                <% timList.forEach((t)=> { %>
                  <option value="<%= t.id %>">
                    <%= t.nama %>
                  </option>
                  <% }) %>
                    <% } %>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-700">
              <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                <path
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Email</label>
          <input name="email" type="email" required
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none" placeholder="" />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Password</label>
          <input name="password" type="password" required autocomplete="new-password"
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none" placeholder="" />
        </div>

        <!-- Wrapper Anggota (Hanya untuk TIM_PENILAI) -->
        <div id="wrapAnggotaTambah" class="space-y-4">
          <!-- Anggota 1 -->
          <div>
            <label class="block text-sm font-bold text-black mb-1">Anggota 1 (Ketua)</label>
            <input name="anggota1" placeholder="Ketua Tim" required
              class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700 placeholder-gray-400" />
          </div>

          <!-- Anggota 2 -->
          <div>
            <label class="block text-sm font-bold text-black mb-1">Anggota 2</label>
            <input name="anggota2" placeholder="Anggota"
              class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700 placeholder-gray-400" />
          </div>

          <!-- Anggota 3 -->
          <div>
            <label class="block text-sm font-bold text-black mb-1">Anggota 3</label>
            <input name="anggota3" placeholder="Anggota"
              class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700 placeholder-gray-400" />
          </div>

          <!-- Anggota 4 -->
          <div>
            <label class="block text-sm font-bold text-black mb-1">Anggota 4</label>
            <input name="anggota4" placeholder="Anggota"
              class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700 placeholder-gray-400" />
          </div>

          <!-- Anggota 5 -->
          <div>
            <label class="block text-sm font-bold text-black mb-1">Anggota 5</label>
            <input name="anggota5" placeholder="Anggota"
              class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700 placeholder-gray-400" />
          </div>
        </div>

        <!-- Buttons -->
        <div class="pt-4 flex items-center justify-end gap-3 mt-auto">
          <button type="button" data-close="modalTambah"
            class="px-8 py-2.5 rounded-xl bg-gray-300 text-gray-800 font-bold hover:bg-gray-400 shadow-sm text-sm">
            Batal
          </button>

          <button type="submit"
            class="px-8 py-2.5 rounded-xl bg-red-600 text-white font-bold hover:bg-red-700 shadow-lg shadow-red-700/30 text-sm">
            Tambah
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- ================= MODAL: EDIT ================= -->
  <div id="modalEdit" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/40" data-close="modalEdit"></div>

    <div class="absolute right-0 top-0 h-full w-full max-w-md bg-white shadow-2xl flex flex-col">
      <div class="bg-white px-6 py-5 flex items-center justify-between border-b border-gray-100 relative">
        <div>
          <div class="text-xl font-bold text-black">Edit Tim Penilai</div>
          <div class="text-sm text-gray-500">Edit Akun & Anggota</div>
        </div>
        <button type="button" class="text-gray-400 hover:text-gray-600 text-2xl font-bold absolute top-4 right-6"
          data-close="modalEdit">✕</button>
      </div>

      <form action="/pengguna/edit" method="POST" class="p-6 space-y-4 overflow-y-auto flex-1" autocomplete="off">
        <input type="hidden" name="email" id="editEmailHidden" />

        <!-- Role (Disabled for edit) -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Role</label>
          <input value="TIM_PENILAI" disabled
            class="w-full rounded-xl border-2 border-gray-300 bg-gray-100 px-4 py-2.5 outline-none text-gray-500" />
        </div>

        <!-- Tim -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Pilih Tim</label>
          <div class="relative">
            <select name="timId" id="editTimId"
              class="w-full rounded-xl border-2 border-red-600 bg-white px-4 py-2.5 outline-none appearance-none text-gray-700">
              <option value="">-</option>
              <% if (timList && timList.length) { %>
                <% timList.forEach((t)=> { %>
                  <option value="<%= t.id %>">
                    <%= t.nama %>
                  </option>
                  <% }) %>
                    <% } %>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-700">
              <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                <path
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Email (Readonly) -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Email</label>
          <input id="editEmailShow" type="email" readonly
            class="w-full rounded-xl border-2 border-red-600 bg-gray-50 px-4 py-2.5 outline-none" />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Password</label>
          <input name="password" id="editPassword" type="password" autocomplete="new-password"
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none"
            placeholder="Kosongkan jika tidak ubah..." />
        </div>

        <!-- Anggota 1 -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Anggota 1</label>
          <input name="anggota1" id="editAnggota1" placeholder="Ketua Tim"
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700" />
        </div>

        <!-- Anggota 2 -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Anggota 2</label>
          <input name="anggota2" id="editAnggota2"
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700" />
        </div>

        <!-- Anggota 3 -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Anggota 3</label>
          <input name="anggota3" id="editAnggota3"
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700" />
        </div>

        <!-- Anggota 4 -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Anggota 4</label>
          <input name="anggota4" id="editAnggota4"
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700" />
        </div>

        <!-- Anggota 5 -->
        <div>
          <label class="block text-sm font-bold text-black mb-1">Anggota 5</label>
          <input name="anggota5" id="editAnggota5"
            class="w-full rounded-xl border-2 border-red-600 px-4 py-2.5 outline-none text-gray-700" />
        </div>

        <!-- Hapus Button -->
        <div class="mt-4 flex justify-between items-center pt-4 border-t border-gray-100">
          <button type="submit" form="formHapus" class="text-red-500 font-bold hover:underline text-sm">
            Hapus Pengguna Ini
          </button>

          <div class="flex gap-3">
            <button type="button" data-close="modalEdit"
              class="px-6 py-2.5 rounded-xl bg-gray-300 text-gray-800 font-bold hover:bg-gray-400 shadow-sm text-sm">
              Batal
            </button>
            <button type="submit"
              class="px-6 py-2.5 rounded-xl bg-red-600 text-white font-bold hover:bg-red-700 shadow-lg shadow-red-700/30 text-sm">
              Simpan
            </button>
          </div>
        </div>

      </form>
      <!-- Form Hapus Separate -->
      <form id="formHapus" action="/pengguna/hapus" method="POST" onsubmit="return confirm('Yakin hapus pengguna ini?')"
        class="hidden">
        <input type="hidden" name="email" id="editEmailHiddenHapus" />
      </form>
    </div>
  </div>

  <script src="/js/kelola-tim-penilai.js"></script>
</body>
</html>