<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Kelola Kantor Tim</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/sp.png" type="image/sp.png">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
<div class="flex min-h-screen">

  <!-- SIDEBAR -->
  <%- include('../partials/sidebarAdmin') %>

  <!-- MAIN -->
  <div class="flex-1 flex flex-col">
    <%- include('../partials/header') %>

    <main class="flex-1">
      <section class="p-6 space-y-6">

        <!-- TOP BAR -->
        <div class="max-w-6xl mx-auto flex items-center justify-between gap-4">

          <!-- TABS -->
          <div class="flex gap-3">
            <a href="/kelola-tim-penilai"
              class="px-5 py-3 rounded-xl shadow
              <%= activeTab === 'tim'
                  ? 'bg-red-700 text-white'
                  : 'bg-white text-gray-700 border hover:bg-gray-50' %>">
              Kelola Tim Penilai
            </a>

            <a href="/kelolaKantor"
              class="px-5 py-3 rounded-xl shadow
              <%= activeTab === 'kantor'
                  ? 'bg-red-700 text-white'
                  : 'bg-white text-gray-700 border hover:bg-gray-50' %>">
              Kelola Kantor Tim
            </a>
          </div>

          <!-- BUTTON TAMBAH -->
          <button id="btnTambahKantor"
            class="px-4 py-2 bg-red-600 text-white rounded-lg shadow flex items-center gap-2">
            üè¢ Tambah Kantor
          </button>
        </div>

        <!-- CARD -->
        <div class="bg-white rounded-lg shadow-lg p-6 space-y-6">

          <% dataTim.forEach(tim => { %>
          <div>
            <div class="bg-red-600 text-white px-4 py-2 rounded font-semibold">
              <%= tim.nama %>
              <span class="text-sm font-normal">
                | <%= tim.jumlah %> Kantor Penugasan
              </span>
            </div>

            <div class="mt-3 space-y-3">
              <% tim.kantor.forEach(k => { %>
              <div class="border rounded p-3 flex justify-between items-center">
                <div class="flex items-center gap-3">
                  üè¢ <span class="font-medium"><%= k %></span>
                </div>
                <button class="text-red-600 btn-delete" data-nama="<%= k %>">
                  Delete
                </button>
              </div>
              <% }) %>
            </div>
          </div>
          <% }) %>

        </div>
      </section>
    </main>

    <!-- FOOTER -->
    <div>
      <%- include('../partials/footer') %>
    </div>
  </div>
</div>

<!-- MODAL TAMBAH -->
<div id="modalTambahKantor"
  class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50">

  <div class="bg-white w-full max-w-md rounded-lg shadow-lg">
    <div class="bg-red-600 text-white px-4 py-3 rounded-t-lg flex justify-between items-center">
      <h3 class="font-semibold">Tambah Kantor Baru</h3>
      <button id="closeModal" class="text-xl">&times;</button>
    </div>

    <form class="p-4 space-y-4">
      <div>
        <label class="text-sm font-medium">Pilih Tim</label>
        <select class="w-full border rounded px-3 py-2">
          <% dataTim.forEach(tim => { %>
            <option><%= tim.nama %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <label class="text-sm font-medium">Nama Kantor</label>
        <input type="text"
          class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-red-500 outline-none">
      </div>

      <div class="flex justify-end gap-2">
        <button type="button" id="btnBatal" class="px-4 py-2 border rounded">Batal</button>
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded">Tambah</button>
      </div>
    </form>
  </div>
</div>

<!-- MODAL DELETE -->
<div id="modalDelete"
  class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50">

  <div class="bg-white w-full max-w-sm rounded-lg shadow-lg">
    <div class="bg-red-600 text-white px-4 py-3 rounded-t-lg font-semibold">
      Konfirmasi Hapus
    </div>

    <div class="p-4 space-y-4 text-sm">
      <p>
        Yakin ingin menghapus kantor:
        <span id="namaKantorDelete" class="font-semibold"></span>?
      </p>

      <div class="flex justify-end gap-2">
        <button id="batalDelete" class="px-4 py-2 border rounded">Batal</button>
        <button id="confirmDelete" class="px-4 py-2 bg-red-600 text-white rounded">Hapus</button>
      </div>
    </div>
  </div>
</div>

<!-- SCRIPT -->
<script>
  const modalTambah = document.getElementById('modalTambahKantor');
  const modalDelete = document.getElementById('modalDelete');
  const namaDelete = document.getElementById('namaKantorDelete');

  let targetElement = null;

  function updateJumlahKantor() {
    document.querySelectorAll('.bg-red-600.text-white.px-4.py-2').forEach(header => {
      const list = header.parentElement.querySelector('.mt-3');
      const span = header.querySelector('span');
      if (list && span) {
        span.textContent = `| ${list.children.length} Kantor Penugasan`;
      }
    });
  }

  document.getElementById('btnTambahKantor').onclick = () => {
    modalTambah.classList.remove('hidden');
    modalTambah.classList.add('flex');
  };

  document.getElementById('closeModal').onclick =
  document.getElementById('btnBatal').onclick = () => {
    modalTambah.classList.add('hidden');
  };

  document.querySelectorAll('.btn-delete').forEach(btn => {
    btn.onclick = () => {
      targetElement = btn.closest('.border.rounded.p-3');
      namaDelete.textContent = btn.dataset.nama;
      modalDelete.classList.remove('hidden');
      modalDelete.classList.add('flex');
    };
  });

  document.getElementById('batalDelete').onclick = () => {
    modalDelete.classList.add('hidden');
  };

  document.getElementById('confirmDelete').onclick = () => {
    if (targetElement) targetElement.remove();
    modalDelete.classList.add('hidden');
    updateJumlahKantor();
  };

  updateJumlahKantor();
</script>

</body>
</html>
