<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <title>
    <%= title %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/sp.png" type="image/sp.png">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <div class="flex">

    <!-- SIDEBAR -->
    <%- include('../partials/sidebarAdmin') %>

      <!-- MAIN -->
      <div class="flex-1 flex flex-col min-h-screen">
        <%- include('../partials/header') %>

          <main class="flex-1 flex flex-col">

            <!-- CONTENT -->
            <section class="p-6 space-y-6">

              <!-- BUTTONS -->
              <div class="flex flex-wrap gap-3 items-center">
                <!-- Optional Navigation link -->
                <a href="/kelola-tim-penilai"
                  class="px-4 py-2 bg-white border rounded shadow-sm hover:bg-gray-50">Kelola Tim Penilai</a>
                <button class="px-4 py-2 bg-red-600 text-white rounded shadow cursor-default">Kelola Kantor Tim</button>

                <button id="btnTambahKantor"
                  class="ml-auto px-4 py-2 bg-red-600 text-white rounded-lg shadow flex items-center gap-2 hover:bg-red-700 transition">
                  üè¢ Tambah Kantor
                </button>
              </div>

              <% if (typeof error !=='undefined' && error) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                  <strong class="font-bold">Error!</strong>
                  <span class="block sm:inline">
                    <%= error %>
                  </span>
                </div>
                <% } %>

                  <!-- CARD CONTAINER -->
                  <div class="bg-white rounded-lg shadow-lg p-6 space-y-6">

                    <% if (dataTim && dataTim.length> 0) { %>
                      <% dataTim.forEach(tim=> { %>
                        <div class="tim-section" data-tim-nama="<%= tim.nama %>">
                          <div class="bg-red-600 text-white px-4 py-2 rounded font-semibold header-tim">
                            <%= tim.nama %> <span class="text-sm font-normal span-jumlah">| <%= tim.jumlah %> Kantor
                                  Penugasan</span>
                          </div>

                          <div class="mt-3 space-y-3 list-kantor">
                            <% if (tim.kantor.length===0) { %>
                              <p class="text-gray-400 text-sm italic p-2 placeholder-empty">Belum ada kantor ditugaskan.
                              </p>
                              <% } %>

                                <% tim.kantor.forEach(k=> { %>
                                  <div class="border rounded p-3 flex justify-between items-center">
                                    <div class="flex items-center gap-3">
                                      üè¢ <span class="font-medium">
                                        <%= k.nama %>
                                      </span>
                                    </div>
                                    <!-- Note: we might want a real delete endpoint later -->
                                    <button class="text-red-600 btn-delete hover:text-red-800"
                                      data-nama="<%= k.nama %>">Delete</button>
                                  </div>
                                  <% }) %>
                          </div>
                        </div>
                        <% }) %>
                          <% } else { %>
                            <div class="text-center py-8 text-gray-500">
                              <p>Tidak ada data Tim Penilai (atau tidak ada Periode Aktif).</p>
                            </div>
                            <% } %>

                  </div>
            </section>
          </main>
          <!-- FOOTER -->
          <div>
            <%- include('../partials/footer') %>
          </div>

          <!-- MODAL TAMBAH -->
          <div id="modalTambahKantor"
            class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50">

            <div class="bg-white w-full max-w-md rounded-lg shadow-lg">
              <div class="bg-red-600 text-white px-4 py-3 rounded-t-lg flex justify-between items-center">
                <h3 class="font-semibold">Tambah Kantor Baru</h3>
                <button id="closeModal" class="text-xl hover:text-gray-200">&times;</button>
              </div>

              <form class="p-4 space-y-4">
                <div>
                  <label class="text-sm font-medium">Pilih Tim</label>
                  <select name="timNama" class="w-full border rounded px-3 py-2 bg-white" required>
                    <% if (dataTim && dataTim.length> 0) { %>
                      <% dataTim.forEach(tim=> { %>
                        <option value="<%= tim.nama %>">
                          <%= tim.nama %>
                        </option>
                        <% }) %>
                          <% } else { %>
                            <option disabled>Tidak ada tim tersedia (Pastikan ada Akun dengan TimKode)</option>
                            <% } %>
                  </select>
                </div>

                <div>
                  <label class="text-sm font-medium">Nama Kantor</label>
                  <input type="text" name="namaKantor" required placeholder="Contoh: KANTOR CABANG X"
                    class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-red-500 outline-none">
                </div>

                <div class="flex justify-end gap-2">
                  <button type="button" id="btnBatal" class="px-4 py-2 border rounded hover:bg-gray-50">Batal</button>
                  <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Tambah</button>
                </div>
              </form>
            </div>
          </div>

          <!-- MODAL DELETE -->
          <div id="modalDelete" class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50">

            <div class="bg-white w-full max-w-sm rounded-lg shadow-lg">
              <div class="bg-red-600 text-white px-4 py-3 rounded-t-lg font-semibold">
                Konfirmasi Hapus
              </div>

              <div class="p-4 space-y-4 text-sm">
                <p>
                  Yakin ingin menghapus kantor:
                  <span id="namaKantorDelete" class="font-semibold"></span>?
                </p>

                <div class="flex justify-end gap-2">
                  <button id="batalDelete" class="px-4 py-2 border rounded hover:bg-gray-50">Batal</button>
                  <button id="confirmDelete"
                    class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Hapus</button>
                </div>
              </div>
            </div>
          </div>

          <!-- SCRIPT -->
          <script>
            const modalTambah = document.getElementById('modalTambahKantor');
            const modalDelete = document.getElementById('modalDelete');
            const namaDelete = document.getElementById('namaKantorDelete');

            const formTambah = modalTambah.querySelector('form');
            // Gunakan selector by name agar lebih robust
            const selectTim = formTambah.querySelector('select[name="timNama"]');
            const inputNama = formTambah.querySelector('input[name="namaKantor"]');

            let targetElement = null;

            // ==============================
            // UPDATE JUMLAH KANTOR PER TIM
            // ==============================
            function updateJumlahKantor() {
              document.querySelectorAll('.header-tim').forEach(header => {
                const timWrapper = header.parentElement;
                const listKantor = timWrapper.querySelector('.list-kantor');

                if (!listKantor) return;

                const visibleKantor = [...listKantor.children].filter(el => !el.classList.contains('placeholder-empty'));
                const jumlah = visibleKantor.length;

                const spanJumlah = header.querySelector('.span-jumlah');
                if (spanJumlah) spanJumlah.textContent = `| ${jumlah} Kantor Penugasan`;
              });
            }

            // ==============================
            // BUKA & TUTUP MODAL TAMBAH
            // ==============================
            const btnTambah = document.getElementById('btnTambahKantor');
            if (btnTambah) {
              btnTambah.onclick = () => {
                modalTambah.classList.remove('hidden');
                modalTambah.classList.add('flex');
              };
            }

            const closeModalList = [document.getElementById('closeModal'), document.getElementById('btnBatal')];
            closeModalList.forEach(btn => {
              if (btn) {
                btn.onclick = () => {
                  modalTambah.classList.add('hidden');
                  modalTambah.classList.remove('flex');
                };
              }
            });


            // ==============================
            // TAMBAH KANTOR (AJAX)
            // ==============================
            formTambah.onsubmit = async (e) => {
              e.preventDefault();

              const timDipilih = selectTim.value;
              const namaKantorValue = inputNama.value.trim();
              if (!namaKantorValue) return;

              // Send to Backend
              try {
                const res = await fetch('/kelolaKantor/tambah', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ timNama: timDipilih, namaKantor: namaKantorValue })
                });
                const data = await res.json();

                if (data.success) {
                  // UI Update
                  addKantorToUI(timDipilih, namaKantorValue);

                  // Close Modal
                  modalTambah.classList.add('hidden');
                  modalTambah.classList.remove('flex');
                  inputNama.value = '';
                } else {
                  alert('Gagal menambah kantor: ' + (data.message || 'Error server'));
                }
              } catch (err) {
                console.error(err);
                alert('Terjadi kesalahan koneksi.');
              }
            };

            function addKantorToUI(timNama, namaKantor) {
              // Cari section tim
              const timSection = document.querySelector(`.tim-section[data-tim-nama="${timNama}"]`);
              if (!timSection) return;

              const listKantor = timSection.querySelector('.list-kantor');

              // Remove placeholder if exists
              const placeholder = listKantor.querySelector('.placeholder-empty');
              if (placeholder) placeholder.remove();

              const card = document.createElement('div');
              card.className = 'border rounded p-3 flex justify-between items-center';
              card.innerHTML = `
      <div class="flex items-center gap-3">
        üè¢ <span class="font-medium">${namaKantor}</span>
      </div>
      <button class="text-red-600 btn-delete hover:text-red-800" data-nama="${namaKantor}">
        Delete
      </button>
    `;

              listKantor.appendChild(card);

              // Re-attach listener
              attachDeleteListener(card.querySelector('.btn-delete'));

              updateJumlahKantor();
            }

            // ==============================
            // DELETE
            // ==============================
            function attachDeleteListener(btn) {
              btn.onclick = () => {
                targetElement = btn.closest('.border.rounded.p-3');
                namaDelete.textContent = btn.dataset.nama;
                modalDelete.classList.remove('hidden');
                modalDelete.classList.add('flex');
              };
            }

            // Initial Attach
            document.querySelectorAll('.btn-delete').forEach(btn => attachDeleteListener(btn));

            const btnBatalDelete = document.getElementById('batalDelete');
            if (btnBatalDelete) {
              btnBatalDelete.onclick = () => {
                modalDelete.classList.add('hidden');
                modalDelete.classList.remove('flex');
              };
            }

            const btnConfirmDelete = document.getElementById('confirmDelete');
            if (btnConfirmDelete) {
              btnConfirmDelete.onclick = async () => {
                if (targetElement) {
                  const namaKantor = namaDelete.textContent;

                  try {
                    const res = await fetch('/kelolaKantor/hapus', {
                      method: 'POST',
                      headers: { 'Content-Type': 'application/json' },
                      body: JSON.stringify({ namaKantor })
                    });
                    const data = await res.json();

                    if (data.success) {
                      const listParent = targetElement.parentElement;
                      targetElement.remove();

                      // If empty, show placeholder?
                      if (listParent.children.length === 0) {
                        // optional: add placeholder back
                      }
                      updateJumlahKantor();
                    } else {
                      alert('Gagal menghapus: ' + (data.message || 'Error'));
                    }
                  } catch (err) {
                    console.error(err);
                    alert('Gagal menghubungi server');
                  }
                }
                modalDelete.classList.add('hidden');
                modalDelete.classList.remove('flex');
              };
            }

            // ==============================
            // INIT SAAT LOAD
            // ==============================
            // updateJumlahKantor(); // Not strictly needed since server renders correct count, but good for safety
          </script>
</body>
</html>