<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/sp.png" type="image/sp.png">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="flex">

        <!-- SIDEBAR -->
        <%- include('../partials/sidebarAdmin') %>

            <!-- MAIN -->
            <div class="flex-1 flex flex-col min-h-screen">
                <%- include('../partials/header') %>

                    <main class="flex-1 flex flex-col">
                        <section class="p-6 space-y-6">

                            <div class="flex justify-between items-center">
                                <h1 class="text-2xl font-bold text-gray-800">Kelola Periode Penilaian</h1>
                                <button id="btnTambah"
                                    class="bg-red-600 text-white px-4 py-2 rounded shadow hover:bg-red-700">
                                    + Tambah Periode
                                </button>
                            </div>

                            <!-- TABLE -->
                            <div class="bg-white rounded-lg shadow overflow-hidden">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Nama Periode</th>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Tahun</th>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Semester</th>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Status</th>
                                            <th
                                                class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% if (periodes && periodes.length> 0) { %>
                                            <% periodes.forEach(p=> { %>
                                                <tr>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <%= p.namaPeriode %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <%= p.tahun %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <%= p.semester %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <% if (p.statusAktif) { %>
                                                            <span
                                                                class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                                Aktif
                                                            </span>
                                                            <% } else { %>
                                                                <span
                                                                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                                                    Non-Aktif
                                                                </span>
                                                                <% } %>
                                                    </td>
                                                    <td
                                                        class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                        <% if (!p.statusAktif) { %>
                                                            <button onclick="aktifkanPeriode('<%= p.id %>')"
                                                                class="text-green-600 hover:text-green-900 mr-3 font-bold">Aktifkan</button>
                                                            <% } %>
                                                                <button onclick="hapusPeriode('<%= p.id %>')"
                                                                    class="text-red-600 hover:text-red-900">Hapus</button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center py-4 text-gray-500">Belum
                                                                ada data periode.</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                        </section>
                    </main>

                    <div>
                        <%- include('../partials/footer') %>
                    </div>

                    <!-- MODAL TAMBAH -->
                    <div id="modalTambah"
                        class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
                        <div class="bg-white w-full max-w-sm rounded shadow-lg">
                            <div class="bg-red-600 text-white px-4 py-3 rounded-t font-bold flex justify-between">
                                <span>Tambah Periode Baru</span>
                                <button id="closeModal" class="text-xl">&times;</button>
                            </div>
                            <form id="formTambah" class="p-4 space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700">Tahun</label>
                                    <input type="number" name="tahun" value="2026"
                                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2"
                                        required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700">Semester</label>
                                    <select name="semester"
                                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                                        <option value="1">1 (Ganjil)</option>
                                        <option value="2">2 (Genap)</option>
                                    </select>
                                </div>
                                <div class="flex justify-end pt-2">
                                    <button type="submit"
                                        class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Simpan</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <script>
                        const modal = document.getElementById('modalTambah');
                        document.getElementById('btnTambah').onclick = () => {
                            modal.classList.remove('hidden');
                            modal.classList.add('flex');
                        };
                        document.getElementById('closeModal').onclick = () => {
                            modal.classList.add('hidden');
                            modal.classList.remove('flex');
                        };

                        document.getElementById('formTambah').onsubmit = async (e) => {
                            e.preventDefault();
                            const formData = new FormData(e.target);
                            const data = Object.fromEntries(formData.entries());

                            try {
                                const res = await fetch('/kelola-periode/tambah', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(data)
                                });
                                const result = await res.json();
                                if (result.success) {
                                    location.reload();
                                } else {
                                    alert(result.message);
                                }
                            } catch (err) {
                                console.error(err);
                                alert('Gagal menambah periode');
                            }
                        };

                        async function aktifkanPeriode(id) {
                            if (!confirm('Aktifkan periode ini? Periode lain akan dinonaktifkan.')) return;
                            try {
                                const res = await fetch(`/kelola-periode/aktifkan/${id}`, { method: 'POST' });
                                const result = await res.json();
                                if (result.success) location.reload();
                                else alert(result.message);
                            } catch (err) {
                                console.error(err);
                                alert('Gagal mengaktifkan');
                            }
                        }

                        async function hapusPeriode(id) {
                            if (!confirm('Yakin hapus? Data terkait (Penilaian dll) mungkin akan error.')) return;
                            try {
                                const res = await fetch(`/kelola-periode/hapus/${id}`, { method: 'DELETE' });
                                const result = await res.json();
                                if (result.success) location.reload();
                                else alert(result.message);
                            } catch (err) {
                                console.error(err);
                                alert('Gagal menghapus');
                            }
                        }
                    </script>

</body>

</html>