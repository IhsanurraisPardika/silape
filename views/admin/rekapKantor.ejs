<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rekap Penilaian 5P</title>
  <link rel="icon" href="/images/sp.png">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 antialiased">
  <div class="flex h-screen overflow-hidden">
    <!-- SIDEBAR -->
    <%- include('../partials/sidebarAdmin') %>

      <!-- CONTENT -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <%- include('../partials/header') %>

          <main class="flex-1 overflow-auto bg-gray-50 flex flex-col">
            <div class="p-8 pb-24 flex-grow">
              <h1 class="text-3xl font-bold text-gray-800 mb-6">Rekap Penilaian 5P</h1>

              <!-- FILTER & BUTTON -->
              <div class="bg-white p-4 rounded shadow mb-6 flex justify-between items-center">
                <div class="flex gap-3">
                  <a href="/dashboardAdmin/rekapKantorAdmin" class="bg-red-600 text-white px-5 py-2 rounded shadow">
                    Rekap Kantor
                  </a>
                  <a href="/dashboardAdmin/rekapPenilaianAdmin" class="px-5 py-2 bg-white rounded shadow">
                    Rekap Penilaian
                  </a>
                  <a href="/dashboardAdmin/rekapKriteriaAdmin" class="px-5 py-2 bg-white rounded shadow">
                    Rekap Kriteria
                  </a>
                </div>

                <a href="/dashboardAdmin/downloadRekapKantor?kantorId=<%= selectedKantorId %>"
                  class="bg-green-600 text-white px-4 py-2 rounded">
                  Download Rekap
                </a>
              </div>

              <div class="mb-4">
                <form method="GET" action="/dashboardAdmin/rekapKantorAdmin" class="flex items-center">
                  <label class="font-small whitespace-nowrap">Filter Kantor :</label>
                  <select name="kantorId" onchange="this.form.submit()" class="border rounded px-3 py-2 ml-2 w-64">
                    <option value="">-- Pilih Kantor --</option>
                    <% kantorList.forEach(function(kantor) { %>
                      <option value="<%= kantor.id %>" <%=selectedKantorId===kantor.id ? 'selected' : '' %>>
                        <%= kantor.nama %>
                      </option>
                      <% }); %>
                  </select>
                </form>
              </div>

              <!-- TABLE -->
              <div class="bg-white rounded shadow overflow-x-auto">
                <% if (selectedKantor) { %>
                  <div class="bg-red-700 text-white font-bold p-3">
                    <%= selectedKantor.nama %>
                  </div>

                  <table class="w-full border text-center">
                    <thead class="bg-gray-100">
                      <tr>
                        <th class="border p-2">Kriteria</th>
                        <th class="border p-2"></th>
                        <% headerColumns.forEach(function(nama) { %>
                          <th class="border p-2">
                            <%= nama %>
                          </th>
                          <% }); %>
                            <th class="border p-2 bg-cyan-200">Rata-rata</th>
                            <th class="border p-2 bg-green-200">Bobot</th>
                      </tr>
                    </thead>

                    <% Object.keys(rekapData.groupedData).forEach(function(pKey) { %>
                      <% const rows=rekapData.groupedData[pKey]; %>
                        <tbody>
                          <tr class="font-semibold">
                            <td colspan="<%= 4 + headerColumns.length %>" class="border p-2 text-left">
                              Penilaian <%= pKey %>
                            </td>
                          </tr>

                          <% rows.forEach(function(row) { %>
                            <!-- Row 1: Nilai -->
                            <tr>
                              <td class="border p-2" rowspan="2">
                                <%= row.kunci %>
                              </td>
                              <td class="border p-2">Nilai</td>
                              <% headerColumns.forEach(function(nama) { %>
                                <td class="border p-2">
                                  <%= row.nilaiPerPenilai[nama] || '-' %>
                                </td>
                                <% }); %>
                                  <td class="border p-2 bg-cyan-200" rowspan="2">
                                    <%= row.rataRata %>
                                  </td>
                                  <td class="border p-2 bg-green-200" rowspan="2">
                                    <%= row.bobot %>
                                  </td>
                            </tr>
                            <!-- Row 2: Catatan -->
                            <tr>
                              <td class="border p-2 font-semibold">Catatan</td>
                              <% headerColumns.forEach(function(nama) { %>
                                <td class="border p-2 text-xs italic text-gray-600">
                                  <%= row.catatanPerPenilai[nama] || '-' %>
                                </td>
                                <% }); %>
                            </tr>
                            <% }); %>

                              <tr>
                                <td colspan="<%= 2 + headerColumns.length %>"
                                  class="border p-2 text-right font-semibold">
                                  Rata-rata <%= pKey %>
                                </td>
                                <td class="border p-2 font-bold">
                                  <%= rekapData.pAverages[pKey] %>
                                </td>
                                <td class="border p-2 font-bold bg-green-200">
                                  <%= rekapData.pTotalBobot[pKey] %>
                                </td>
                              </tr>
                        </tbody>
                        <% }); %>

                  </table>

                  <div class="mt-6 flex justify-end">
                    <div class="bg-gray-800 text-white p-4 rounded-lg shadow-lg flex items-center gap-4">
                      <span class="text-lg font-medium">Nilai Akhir (Total Bobot):</span>
                      <span class="text-3xl font-bold text-green-400">
                        <%= rekapData.totalSkorAkhir %>
                      </span>
                    </div>
                  </div>

                  <% } else { %>
                    <div class="p-4 text-center text-gray-500">
                      Silakan pilih kantor terlebih dahulu.
                    </div>
                    <% } %>
              </div>
            </div>
            <div class="mt-auto">
              <%- include('../partials/footer') %>
            </div>
          </main>
      </div>
  </div>
</body>

</html>