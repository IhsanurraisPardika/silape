<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <title>Rekap Penilaian 5P</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/sp.png" type="image/sp.png">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 antialiased">

  <div class="flex h-screen overflow-hidden">

    <!-- SIDEBAR -->
    <%- include('../partials/sidebarAdmin') %>

      <!-- MAIN -->
      <div class="flex-1 flex flex-col min-h-screen">
        <%- include('../partials/header') %>

          <main class="flex-1 overflow-auto bg-gray-50">
            <div class="p-8 pb-24">

              <!-- TITLE -->
              <h1 class="text-3xl font-bold mb-4">Rekap Penilaian 5P</h1>

              <!-- TAB -->
              <div class="flex gap-3 mb-6">
                <a href="/dashboardAdmin/rekapKantorAdmin" class="px-5 py-2 bg-white rounded shadow">
                  Rekap Kantor
                </a>

                <a href="/dashboardAdmin/rekapPenilaianAdmin" class="px-5 py-2 bg-red-600 text-white rounded shadow">
                  Rekap Penilaian
                </a>

                <a href="/dashboardAdmin/rekapKriteriaAdmin" class="px-5 py-2 bg-white rounded shadow">
                  Rekap Kriteria
                </a>
              </div>

              <!-- FILTER -->
              <div class="bg-white p-5 rounded shadow mb-6 space-y-4">
                <div>
                  <label class="block font-medium mb-1">Tahun</label>
                  <select id="tahunFilter" class="w-full border rounded px-3 py-2">
                    <% [...new Set(periodes.map(p=> p.tahun))].forEach(tahun => { %>
                      <option value="<%= tahun %>" <%=periodeAktif && periodeAktif.tahun===tahun ? 'selected' : '' %>>
                        <%= tahun %>
                      </option>
                      <% }) %>
                  </select>
                </div>

                <div>
                  <label class="block font-medium mb-1">Semester</label>
                  <select id="semesterFilter" class="w-full border rounded px-3 py-2">
                    <option value="1" <%=periodeAktif && periodeAktif.semester===1 ? 'selected' : '' %>>1</option>
                    <option value="2" <%=periodeAktif && periodeAktif.semester===2 ? 'selected' : '' %>>2</option>
                  </select>
                </div>

                <div class="pt-2">
                  <a id="downloadBtn" href="/dashboardAdmin/downloadRekapPenilaian"
                    class="inline-block bg-green-600 text-white px-5 py-2 rounded hover:bg-green-700 transition">
                    Download Rekap
                  </a>
                </div>
              </div>

              <div id="periodesData" data-periodes="<%= JSON.stringify(periodes) %>" class="hidden"></div>

              <script>
                const periodes = JSON.parse(document.getElementById('periodesData').dataset.periodes);
                const tahunSelect = document.getElementById('tahunFilter');
                const semesterSelect = document.getElementById('semesterFilter');
                const downloadBtn = document.getElementById('downloadBtn');

                // Get current periodeId from URL
                const urlParams = new URLSearchParams(window.location.search);
                const currentPeriodeId = urlParams.get('periodeId');

                function updateSemesters(isInit = false) {
                  const selectedTahun = parseInt(tahunSelect.value);
                  const validSemesters = periodes
                    .filter(p => p.tahun === selectedTahun)
                    .map(p => p.semester)
                    .sort((a, b) => a - b);

                  // Keep current semester if it exists in new list
                  const currentVal = semesterSelect.value;
                  semesterSelect.innerHTML = '';

                  validSemesters.forEach(sms => {
                    const opt = document.createElement('option');
                    opt.value = sms;
                    opt.innerText = sms;
                    if (sms.toString() === currentVal) opt.selected = true;
                    semesterSelect.appendChild(opt);
                  });

                  if (!isInit) {
                    applyFilter();
                  } else {
                    updateDownloadLink();
                  }
                }

                function applyFilter() {
                  const thn = parseInt(tahunSelect.value);
                  const sms = parseInt(semesterSelect.value);
                  const p = periodes.find(item => item.tahun === thn && item.semester === sms);

                  if (p && p.id.toString() !== currentPeriodeId) {
                    window.location.href = `/dashboardAdmin/rekapPenilaianAdmin?periodeId=${p.id}`;
                  } else {
                    updateDownloadLink();
                  }
                }

                function updateDownloadLink() {
                  const thn = parseInt(tahunSelect.value);
                  const sms = parseInt(semesterSelect.value);
                  const p = periodes.find(item => item.tahun === thn && item.semester === sms);
                  if (p) {
                    downloadBtn.href = `/dashboardAdmin/downloadRekapPenilaian?periodeId=${p.id}`;
                    downloadBtn.classList.remove('opacity-50', 'pointer-events-none');
                    downloadBtn.innerText = 'Download Rekap';
                  } else {
                    downloadBtn.href = "#";
                    downloadBtn.classList.add('opacity-50', 'pointer-events-none');
                    downloadBtn.innerText = 'Periode Tidak Ditemukan';
                  }
                }

                tahunSelect.addEventListener('change', () => updateSemesters(false));
                semesterSelect.addEventListener('change', applyFilter);

                // Init: update semesters without reloading
                updateSemesters(true); 
              </script>

              <!-- TABLE -->
              <div class="bg-white rounded shadow overflow-x-auto">
                <div class="bg-red-700 text-white font-bold p-3">
                  Rekap Penilaian - <%= periodeAktif ? periodeAktif.namaPeriode : '' %>
                </div>

                <table class="w-full border text-center text-sm">
                  <thead class="bg-gray-100">
                    <tr>
                      <th class="border p-2">Waktu</th>
                      <th class="border p-2">Nama Unit</th>
                      <th class="border p-2">Tim</th>
                      <th class="border p-2">P1</th>
                      <th class="border p-2">P2</th>
                      <th class="border p-2">P3</th>
                      <th class="border p-2">P4</th>
                      <th class="border p-2">P5</th>
                      <th class="border p-2">Nilai Akhir</th>
                      <th class="border p-2">Predikat</th>
                      <th class="border p-2">Catatan</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% if (rekapList.length===0) { %>
                      <tr>
                        <td colspan="11" class="p-4 text-gray-500">Belum ada penilaian yang disubmit.</td>
                      </tr>
                      <% } %>

                        <% rekapList.forEach((row, idx)=> { %>
                          <tr>
                            <td class="border p-2 font-semibold">
                              <%= row.waktu %>
                            </td>
                            <td class="border p-2 text-left font-semibold">
                              <%= row.kantor.nama %>
                            </td>
                            <td class="border p-2">
                              <%= row.timNama %>
                            </td>
                            <td class="border p-2">
                              <%= row.scores.P1 %>
                            </td>
                            <td class="border p-2">
                              <%= row.scores.P2 %>
                            </td>
                            <td class="border p-2">
                              <%= row.scores.P3 %>
                            </td>
                            <td class="border p-2">
                              <%= row.scores.P4 %>
                            </td>
                            <td class="border p-2">
                              <%= row.scores.P5 %>
                            </td>
                            <td class="border p-2 font-bold">
                              <%= row.nilaiAkhir %>
                            </td>
                            <td class="border p-2">
                              <span class="<%= row.predikat.color %> px-3 py-1 rounded-full text-xs font-bold">
                                <%= row.predikat.label %>
                              </span>
                            </td>
                            <td class="border p-2">
                              <button type="button" data-idx="<%= idx %>"
                                onclick="openRekomendasi(this.getAttribute('data-idx'))"
                                class="text-blue-600 hover:underline">
                                Lihat Rekomendasi
                              </button>
                            </td>
                          </tr>
                          <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="mt-auto">
              <%- include('../partials/footer') %>
            </div>
          </main>

      </div>
  </div>

  <!-- MODAL REKOMENDASI -->
  <div id="modalRekomendasi" class="fixed inset-0 bg-black/60 hidden items-center justify-center z-50">
    <div class="w-[650px] bg-gray-200 rounded-xl overflow-hidden shadow-2xl section-fade-in">

      <!-- Header -->
      <div class="bg-red-700 text-white px-5 py-4 flex justify-between items-center font-semibold">
        <span id="modalTitle">REKOMENDASI</span>
        <button onclick="closeRekomendasi()" class="text-2xl leading-none hover:text-gray-300">
          Ã—
        </button>
      </div>

      <!-- BODY MODAL -->
      <div class="p-5 space-y-4 text-sm max-h-[60vh] overflow-y-auto" id="modalBody">
        <!-- Dynamic Content -->
      </div>
    </div>
  </div>

  <!-- Data Injection for Modal -->
  <div id="rekapDataSource" data-value="<%= JSON.stringify(rekapList) %>" class="hidden"></div>
  <script>
    const rekapData = JSON.parse(document.getElementById('rekapDataSource').getAttribute('data-value'));

    function openRekomendasi(idx) {
      const data = rekapData[idx];
      if (!data) return;

      const modal = document.getElementById('modalRekomendasi');
      const modalBody = document.getElementById('modalBody');
      const modalTitle = document.getElementById('modalTitle');

      modalTitle.innerText = `REKOMENDASI - ${data.kantor.nama.toUpperCase()}`;

      if (data.rekomendasi && data.rekomendasi.length > 0) {
        modalBody.innerHTML = data.rekomendasi.map(rek => `
              <div class="mb-4 last:mb-0">
                <p class="font-bold mb-1 text-gray-700"><i class="fas fa-user-edit mr-2"></i>${rek.penilai}</p>
                <div class="bg-white rounded-lg border border-gray-300 p-4 text-gray-700 shadow-sm leading-relaxed">
                  ${rek.text}
                </div>
              </div>
            `).join('');
      } else {
        modalBody.innerHTML = `
                <div class="text-center py-8 text-gray-500 italic flex flex-col items-center">
                    <i class="fas fa-clipboard-check text-4xl mb-3 text-gray-300"></i>
                    <p>Tidak ada rekomendasi yang diberikan oleh tim penilai.</p>
                </div>
            `;
      }

      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    function closeRekomendasi() {
      const modal = document.getElementById('modalRekomendasi');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
  </script>

</body>

</html>