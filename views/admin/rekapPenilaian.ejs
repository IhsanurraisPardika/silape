<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Rekap Penilaian</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
<div class="flex">

  <!-- SIDEBAR -->
  <%- include('../partials/sidebarAdmin') %>

  <!-- MAIN -->
  <div class="flex-1 flex flex-col min-h-screen">
    <%- include('../partials/header') %>

    <main class="p-6 flex-1">

      <h1 class="text-2xl font-bold mb-4">Rekap Penilaian 5P</h1>

      <!-- TAB -->
      <div class="flex gap-3 mb-6">
        <a href="/dashboardAdmin/rekapKantorAdmin"
           class="px-5 py-2 bg-white rounded shadow">
          Rekap Kantor
        </a>

        <a href="/dashboardAdmin/rekapPenilaianAdmin"
            class="bg-red-600 text-white px-5 py-2 rounded shadow">
            Rekap Penilaian
        </a>

        <a href="#"
           class="px-5 py-2 bg-white rounded shadow">
          Rekap Kriteria
        </a>
      </div>

      <!-- FILTER -->
      <div class="bg-white p-5 rounded shadow mb-6 space-y-4">
        <div>
          <label class="block font-medium mb-1">Tahun</label>
          <select class="w-full border rounded px-3 py-2">
            <option>2025</option>
            <option>2024</option>
          </select>
        </div>

        <div>
          <label class="block font-medium mb-1">Semester</label>
          <select class="w-full border rounded px-3 py-2">
            <option>1</option>
            <option>2</option>
          </select>
        </div>

        <button class="bg-red-600 text-white px-5 py-2 rounded">
          Download Rekap
        </button>
      </div>

      <!-- TABLE -->
      <div class="bg-white rounded shadow overflow-x-auto">
        <div class="bg-red-700 text-white font-bold p-3">
          Rekap Penilaian - Semester II 2025
        </div>

        <table class="w-full border text-center text-sm">
          <thead class="bg-gray-100">
            <tr>
              <th class="border p-2">Waktu</th>
              <th class="border p-2">Nama Unit</th>
              <th class="border p-2">Tim</th>
              <th class="border p-2">P1</th>
              <th class="border p-2">P2</th>
              <th class="border p-2">P3</th>
              <th class="border p-2">P4</th>
              <th class="border p-2">P5</th>
              <th class="border p-2">Nilai Akhir</th>
              <th class="border p-2">Predikat</th>
              <th class="border p-2">Catatan</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td class="border p-2 font-semibold">Juli 2025</td>
              <td class="border p-2 text-left font-semibold">
                KANTOR UNIT SATUAN PENGAMANAN
              </td>
              <td class="border p-2">TIM 1</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2 font-bold">60</td>
              <td class="border p-2">
                <span class="bg-cyan-200 px-3 py-1 rounded-full">
                  Baik
                </span>
              </td>
              <td class="border p-2 text-blue-600 underline cursor-pointer">
                Lihat Rekomendasi
              </td>
            </tr>

            <tr>
              <td class="border p-2 font-semibold">Juli 2025</td>
              <td class="border p-2 text-left font-semibold">
                KANTOR UNIT SATUAN PENGAMANAN
              </td>
              <td class="border p-2">TIM 1</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2">60</td>
              <td class="border p-2 font-bold">60</td>
              <td class="border p-2">
                <span class="bg-cyan-200 px-3 py-1 rounded-full">
                  Baik
                </span>
              </td>
              <td class="border p-2 text-blue-600 underline cursor-pointer">
                Lihat Rekomendasi
              </td>
            </tr>
          </tbody>
        </table>
      </div>

    </main>
    <div>
    <%- include('../partials/footer') %>
    </div>
  </div>
</div>
</body>
</html>
