<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Penilaian</title>
  <link rel="icon" href="/images/sp.png" type="image/sp.png">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="antialiased bg-gray-100 m-0 p-0">
  <div class="flex h-screen">
    
    <!-- Sidebar -->
    <div class="w-56 flex-shrink-0">
      <%- include('partials/sidebar') %>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col bg-gray-50 overflow-hidden">

      <!-- Header -->
      <%- include('partials/header') %>

      <!-- Content Area -->
      <div class="flex-1 overflow-auto p-8">

        <!-- Page Title -->
        <h1 class="text-3xl font-bold text-gray-800 mb-6">
          Daftar Penilaian
        </h1>

        <!-- Table Container -->
        <div class="bg-white rounded-xl shadow overflow-hidden">

          <!-- Table Header -->
          <div class="grid grid-cols-5 px-6 py-4 font-semibold text-white bg-red-600">
            <div class="min-w-[120px]">Tanggal</div>
            <div class="min-w-[250px]">Kantor</div>
            <div class="min-w-[100px]">Rata-rata</div>
            <div class="min-w-[100px]">Status</div>
            <div class="min-w-[80px]">Aksi</div>
          </div>

          <!-- Table Rows -->
          <% data.forEach((item, index) => { %>
            <div 
              class="grid grid-cols-5 px-6 py-4 items-center border-b last:border-b-0 hover:bg-gray-50 transition-colors duration-150"
            >
              <!-- Tanggal -->
              <div class="text-sm text-gray-700">
                <%= item.tanggal %>
              </div>

              <!-- Kantor -->
              <div class="text-sm text-gray-700">
                <%- item.kantor %>
              </div>

              <!-- Rata-rata -->
              <div class="font-semibold <%= item.rata ? 'text-green-600' : 'text-gray-400' %>">
                <%= item.rata ?? '-' %>
              </div>

              <!-- Status -->
              <div>
                <% if (item.status === 'Approval') { %>
                  <span class="inline-flex items-center px-3 py-1 text-sm rounded-full bg-green-100 text-green-700">
                    <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                    Approval
                  </span>
                <% } else { %>
                  <span class="inline-flex items-center px-3 py-1 text-sm rounded-full bg-yellow-100 text-yellow-700">
                    <span class="w-2 h-2 bg-yellow-500 rounded-full mr-2"></span>
                    Process
                  </span>
                <% } %>
              </div>

              <!-- Aksi -->
              <div>
                <a 
                  href="#" 
                  class="inline-flex items-center text-red-600 font-semibold hover:text-red-800 hover:underline transition-colors duration-150"
                >
                  Detail
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>

            </div>
          <% }) %>

        </div>

        <!-- Info Footer -->
        <div class="mt-6 text-sm text-gray-500">
          Total: <%= data.length %> data penilaian
        </div>

      </div>

    </div>
  </div>

</body>
</html>