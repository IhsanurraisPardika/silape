<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Penilaian</title>
  <link rel="icon" href="/images/sp.png" type="image/sp.png">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="antialiased bg-gray-100">

<div class="flex h-screen">
  <%- include('partials/sidebar') %>
</div>

  <!-- Main Area -->
  <div class="flex-1 flex flex-col bg-gray-50 overflow-hidden">

    <!-- Header (SAMA PERSIS DENGAN HOME) -->
    <%- include('partials/header') %>

    <!-- Content -->
    <div class="flex-1 overflow-auto p-8">

      <!-- Title -->
      <h1 class="text-3xl font-bold text-gray-800 mb-6">
        Daftar Penilaian
      </h1>

      <!-- Table Card -->
      <div class="bg-white rounded-xl shadow">

        <!-- Table Head -->
        <div class="grid grid-cols-5 px-6 py-4 font-semibold text-white bg-red-600 rounded-t-xl">
          <div>Tanggal</div>
          <div>Kantor</div>
          <div>Rata-rata</div>
          <div>Status</div>
          <div>Aksi</div>
        </div>

        <!-- Table Body -->
        <% data.forEach(item => { %>
          <div class="grid grid-cols-5 px-6 py-4 items-center border-b last:border-none">

            <div class="text-sm text-gray-700">
              <%= item.tanggal %>
            </div>

            <div class="text-sm text-gray-700">
              <%- item.kantor %>
            </div>

            <div class="font-semibold text-green-600">
              <%= item.rata ?? '-' %>
            </div>

            <div>
              <% if (item.status === 'Approval') { %>
                <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-700">
                  Approval
                </span>
              <% } else { %>
                <span class="px-3 py-1 text-sm rounded-full bg-yellow-100 text-yellow-700">
                  Process
                </span>
              <% } %>
            </div>

            <div>
              <a href="#" class="text-red-600 font-semibold hover:underline">
                Detail
              </a>
            </div>

          </div>
        <% }) %>

      </div>

    </div>
  </div>
</div>

</body>
</html>