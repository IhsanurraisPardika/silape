 <script>
  const modalTambah = document.getElementById('modalTambahKantor');
  const modalDelete = document.getElementById('modalDelete');
  const namaDelete = document.getElementById('namaKantorDelete');

  const formTambah = modalTambah.querySelector('form');
  const selectTim = formTambah.querySelector('select');
  const inputNama = formTambah.querySelector('input[type="text"]');

  let targetElement = null;

  // ==============================
  // UPDATE JUMLAH KANTOR PER TIM
  // ==============================
  function updateJumlahKantor() {
    document.querySelectorAll('.bg-red-600.text-white.px-4.py-2').forEach(header => {
      const timWrapper = header.parentElement;
      const listKantor = timWrapper.querySelector('.mt-3');

      if (!listKantor) return;

      const jumlah = listKantor.children.length;

      const spanJumlah = header.querySelector('span');
      spanJumlah.textContent = `| ${jumlah} Kantor Penugasan`;
    });
  }

  // ==============================
  // BUKA & TUTUP MODAL TAMBAH
  // ==============================
  document.getElementById('btnTambahKantor').onclick = () => {
    modalTambah.classList.remove('hidden');
    modalTambah.classList.add('flex');
  };

  document.getElementById('closeModal').onclick =
  document.getElementById('btnBatal').onclick = () => {
    modalTambah.classList.add('hidden');
  };

  // ==============================
  // TAMBAH KANTOR
  // ==============================
  formTambah.onsubmit = (e) => {
    e.preventDefault();

    const timDipilih = selectTim.value;
    const namaKantor = inputNama.value.trim();
    if (!namaKantor) return;

    const headerTim = [...document.querySelectorAll('.bg-red-600.text-white.px-4.py-2')]
      .find(h => h.textContent.includes(timDipilih));

    const listKantor = headerTim.parentElement.querySelector('.mt-3');

    const card = document.createElement('div');
    card.className = 'border rounded p-3 flex justify-between items-center';
    card.innerHTML = `
      <div class="flex items-center gap-3">
        üè¢ <span class="font-medium">${namaKantor}</span>
      </div>
      <button class="text-red-600 btn-delete" data-nama="${namaKantor}">
        Delete
      </button>
    `;

    listKantor.appendChild(card);

    card.querySelector('.btn-delete').onclick = () => {
      targetElement = card;
      namaDelete.textContent = namaKantor;
      modalDelete.classList.remove('hidden');
      modalDelete.classList.add('flex');
    };

    modalTambah.classList.add('hidden');
    inputNama.value = '';

    updateJumlahKantor();
  };

  // ==============================
  // DELETE
  // ==============================
  document.querySelectorAll('.btn-delete').forEach(btn => {
    btn.onclick = () => {
      targetElement = btn.closest('.border.rounded.p-3');
      namaDelete.textContent = btn.dataset.nama;
      modalDelete.classList.remove('hidden');
      modalDelete.classList.add('flex');
    };
  });

  document.getElementById('batalDelete').onclick = () => {
    modalDelete.classList.add('hidden');
  };

  document.getElementById('confirmDelete').onclick = () => {
    if (targetElement) targetElement.remove();
    modalDelete.classList.add('hidden');
    updateJumlahKantor();
  };

  // ==============================
  // INIT SAAT LOAD
  // ==============================
  updateJumlahKantor();
</script>

