<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kriteria Penilaian 5P</title>
    <link rel="icon" href="/images/sp.png" type="image/sp.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .tab-active {
            border-bottom: 4px solid #dc2626;
            color: #dc2626;
        }
        .bg-red-sp { background-color: #dc2626; }
    </style>
</head>
<body class="antialiased bg-gray-100 overflow-hidden">

    <div class="flex h-screen w-full">
        <%- include('partials/sidebar') %>

        <div class="flex-1 flex flex-col min-w-0 h-screen overflow-hidden">
            
            <%- include('partials/header') %>

            <div class="flex-1 overflow-y-auto p-8">
                
                <div class="max-w-6xl mx-auto">
                    <div class="mb-8">
                        <h1 class="text-3xl font-bold text-gray-800 tracking-tight">Kriteria Penilaian 5P Kantor</h1>
                        <p class="text-gray-600 mt-1">Standar operasional penilaian kebersihan dan tata kelola lingkungan kerja sesuai form penilaian.</p>
                    </div>

                    <div class="bg-white rounded-t-2xl shadow-sm border-b flex overflow-x-auto sticky top-0 z-20">
                        <button onclick="switchTab('P1')" id="btn-P1" class="tab-btn px-8 py-5 font-bold text-gray-400 hover:text-red-600 transition-all border-b-4 border-transparent tab-active">P1: PEMILAHAN (RINGKAS)</button>
                        <button onclick="switchTab('P2')" id="btn-P2" class="tab-btn px-8 py-5 font-bold text-gray-400 hover:text-red-600 transition-all border-b-4 border-transparent">P2: PENATAAN (RAPI)</button>
                        <button onclick="switchTab('P3')" id="btn-P3" class="tab-btn px-8 py-5 font-bold text-gray-400 hover:text-red-600 transition-all border-b-4 border-transparent">P3: PEMBERSIHAN (RESIK)</button>
                        <button onclick="switchTab('P4')" id="btn-P4" class="tab-btn px-8 py-5 font-bold text-gray-400 hover:text-red-600 transition-all border-b-4 border-transparent">P4: PEMANTAPAN (RAWAT)</button>
                        <button onclick="switchTab('P5')" id="btn-P5" class="tab-btn px-8 py-5 font-bold text-gray-400 hover:text-red-600 transition-all border-b-4 border-transparent">P5: PEMBIASAAN (RAJIN)</button>
                    </div>

                    <div class="bg-white rounded-b-2xl shadow-xl p-6 mb-12 border-t-0">
                        <div class="overflow-x-auto">
                            <table class="w-full text-left border-collapse">
                                <thead>
                                    <tr class="bg-gray-50 text-gray-700 uppercase text-xs tracking-widest font-bold">
                                        <th class="px-6 py-4 border-b w-16">No</th>
                                        <th class="px-6 py-4 border-b w-1/4">Objek Penilaian / Area</th>
                                        <th class="px-6 py-4 border-b">Kriteria & Standar Penilaian</th>
                                        <th class="px-6 py-4 border-b w-24 text-center">Skor Maks</th>
                                    </tr>
                                </thead>
                                <tbody id="kriteria-body" class="text-gray-600 divide-y divide-gray-100">
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Data diupdate sesuai standar Audit 5P/5R Perkantoran Profesional
        const kriteriaData = {
            'P1': [
                { area: 'Meja Kerja & Laci', detail: 'Tidak ada dokumen/barang yang tidak diperlukan (sampah, kertas bekas, ATK rusak) di atas maupun di dalam meja.', skor: 20 },
                { area: 'Lemari Arsip / Rak', detail: 'Hanya menyimpan dokumen/barang yang masih relevan dengan pekerjaan. Dokumen kadaluarsa dipisahkan/dimusnahkan.', skor: 20 },
                { area: 'Area Bawah Meja', detail: 'Bebas dari penumpukan barang yang tidak terpakai (kardus kosong, sepatu bekas, tas tidak terpakai).', skor: 20 },
                { area: 'Lantai & Dinding', detail: 'Tidak ada barang/peralatan rusak yang diletakkan sembarangan di sudut ruangan atau bersandar di dinding.', skor: 20 },
                { area: 'Peralatan Elektronik', detail: 'Memisahkan kabel atau perangkat elektronik yang rusak/tidak terpakai dari area kerja aktif.', skor: 20 }
            ],
            'P2': [
                { area: 'Tata Letak Dokumen', detail: 'Dokumen tersusun rapi dalam ordner/map, dikelompokkan sesuai jenis, dan mudah ditemukan (kurang dari 30 detik).', skor: 20 },
                { area: 'Identitas & Labeling', detail: 'Semua ordner, laci, lemari, dan saklar lampu memiliki label identitas yang jelas, lurus, dan mudah dibaca.', skor: 20 },
                { area: 'Stationary (ATK)', detail: 'ATK tersimpan di tempat khusus (organizer) dan tidak berserakan di atas meja setelah digunakan.', skor: 20 },
                { area: 'Manajemen Kabel', detail: 'Kabel PC, telepon, dan listrik terikat rapi (cable ties/spiral), tidak semrawut, dan tidak membahayakan.', skor: 20 },
                { area: 'Penyimpanan Tas/Helm', detail: 'Tas, helm, dan barang pribadi karyawan ditempatkan pada tempat khusus/loker yang disediakan.', skor: 20 }
            ],
            'P3': [
                { area: 'Lantai & Sudut Ruang', detail: 'Lantai bersih, kering, tidak berdebu, dan sudut ruangan bebas dari sarang laba-laba.', skor: 20 },
                { area: 'Perangkat Kerja (PC/Telp)', detail: 'Layar monitor, keyboard, CPU, dan telepon bersih dari debu dan noda.', skor: 20 },
                { area: 'Kaca & Jendela', detail: 'Kaca jendela, partisi ruangan, dan kusen bersih serta tembus pandang (tidak buram).', skor: 20 },
                { area: 'Tempat Sampah', detail: 'Tempat sampah tersedia, tidak penuh (overload), dan kondisi fisik tempat sampah bersih.', skor: 20 },
                { area: 'Plafon & Lampu', detail: 'Langit-langit bersih dari kotoran/bocor, dan rumah lampu bebas dari debu.', skor: 20 }
            ],
            'P4': [
                { area: 'Visual Management', detail: 'Terdapat rambu/tanda standar (jalur evakuasi, dilarang merokok, jagalah kebersihan) yang terawat baik.', skor: 25 },
                { area: 'Standarisasi Layout', detail: 'Penataan meja, kursi, dan lemari seragam sesuai standar layout yang ditetapkan perusahaan.', skor: 25 },
                { area: 'Kontrol Visual', detail: 'Terdapat garis pembatas (line marking) atau shadow board untuk penempatan barang inventaris kantor.', skor: 25 },
                { area: 'Sirkulasi Udara', detail: 'Suhu ruangan terjaga (AC berfungsi baik) dan pencahayaan memadai sesuai standar kesehatan kerja.', skor: 25 }
            ],
            'P5': [
                { area: 'Disiplin 5 Menit', detail: 'Karyawan terbiasa melakukan "5 Menit Resik" sebelum mulai dan sesudah selesai bekerja.', skor: 25 },
                { area: 'Kepatuhan Atribut', detail: 'Karyawan menggunakan ID Card dan seragam sesuai ketentuan perusahaan saat berada di area kerja.', skor: 25 },
                { area: 'Jadwal Piket', detail: 'Terdapat jadwal piket kebersihan yang tertempel dan dilaksanakan secara konsisten.', skor: 25 },
                { area: 'Budaya K3', detail: 'Karyawan peduli terhadap aspek keselamatan (tidak menghalangi APAR, tidak membiarkan kabel terkelupas).', skor: 25 }
            ]
        };

        function switchTab(pKey) {
            const body = document.getElementById('kriteria-body');
            const btns = document.querySelectorAll('.tab-btn');
            
            // Handle active state button
            btns.forEach(btn => {
                btn.classList.remove('tab-active', 'text-red-600');
                btn.classList.add('text-gray-400');
            });
            
            const activeBtn = document.getElementById('btn-' + pKey);
            activeBtn.classList.add('tab-active', 'text-red-600');
            activeBtn.classList.remove('text-gray-400');

            // Render content
            body.innerHTML = '';
            kriteriaData[pKey].forEach((item, index) => {
                const row = `
                    <tr class="hover:bg-red-50/50 transition-colors group">
                        <td class="px-6 py-5 border-b text-sm font-bold text-gray-400 group-hover:text-red-600 align-top">${index + 1}</td>
                        <td class="px-6 py-5 border-b font-bold text-gray-800 text-sm align-top">${item.area}</td>
                        <td class="px-6 py-5 border-b text-sm leading-relaxed text-gray-600 align-top">${item.detail}</td>
                        <td class="px-6 py-5 border-b text-center font-bold text-red-600 text-sm align-top">${item.skor}</td>
                    </tr>
                `;
                body.innerHTML += row;
            });
        }

        // Initialize first tab
        window.onload = () => switchTab('P1');
    </script>
</body>
</html>