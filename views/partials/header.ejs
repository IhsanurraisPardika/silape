                    <% if (user) { %>
                        <% if (user.peran==='TIMPENILAI' ) { %>
                            <%= (typeof anggotaAktif !=='undefined' && anggotaAktif) ? anggotaAktif.nama : user.timLabel
                                || 'Tim Penilai' %>
                                <% } else if (user.peran==='ADMIN' ) { %>
