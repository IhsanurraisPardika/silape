<script>
    document.addEventListener('DOMContentLoaded', function () {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(link => {
            const linkPath = link.getAttribute('data-path');
            
            // Hapus kelas aktif default jika ada (opsional, disini kita biarkan bersih)
            link.classList.remove('bg-red-700'); 

            if (!linkPath) return;

            // Logika untuk menandai menu yang aktif
            // Jika path sama persis atau diawali dengan path tersebut (untuk sub-menu)
            if (currentPath === linkPath || currentPath.startsWith(linkPath + '/')) {
                link.classList.add('bg-red-700'); // Menambahkan background merah gelap saat aktif
            }
        });
    });
</script>