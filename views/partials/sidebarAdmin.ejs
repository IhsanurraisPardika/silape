<script>
    // Highlight menu aktif berdasarkan URL
    document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.nav-link');
        
        navLinks.forEach(link => {
            const linkPath = link.getAttribute('data-path');
            
            // Hapus semua highlight terlebih dahulu
            link.classList.remove('bg-red-700');
            
            // Untuk Dashboard, harus exact match atau hanya "/dashboardAdmin" tanpa path tambahan
            if (linkPath === '/dashboardAdmin') {
                if (currentPath === '/dashboardAdmin' || currentPath === '/dashboardAdmin/') {
                    link.classList.add('bg-red-700');
                }
            }
            // Untuk Unduh Laporan, harus exact match
            else if (linkPath === '/dashboardAdmin/unduhLaporan') {
                if (currentPath === '/dashboardAdmin/unduhLaporan' || currentPath.startsWith('/dashboardAdmin/unduhLaporan')) {
                    link.classList.add('bg-red-700');
                }
            }
            // Untuk link lainnya, bisa menggunakan startsWith jika diperlukan
            else if (linkPath && linkPath !== '#' && currentPath.startsWith(linkPath)) {
                link.classList.add('bg-red-700');
            }
        });
    });
</script>